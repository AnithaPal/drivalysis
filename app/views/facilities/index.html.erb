<div class="page-header">
  <%= link_to new_facility_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Facility
  <% end %>
  <h1>Listing facilities</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Address</th>
            <th>County</th>
            <th>City</th>
            <th>Zip code</th>
            <th>Beds</th>
            <th>Telephone</th>
            <th>Type</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @facilities) do |facility| %>
            <td><%= facility.name %></td>
            <td><%= facility.address %></td>
            <td><%= facility.county %></td>
            <td><%= facility.city %></td>
            <td><%= facility.zip_code %></td>
            <td><%= facility.beds %></td>
            <td><%= facility.telephone %></td>
            <td><%= facility.facility_type %></td>
            <td><%= link_to 'Show', facility %></td>
        <td><%= link_to 'Edit', edit_facility_path(facility) %></td>
        <td><%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
