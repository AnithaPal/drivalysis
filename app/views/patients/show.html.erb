<h1>Patient Profile</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <dl class="dl-horizontal">
      <dt> Name: </dt>
      <dd> <%= @patient.name %> </dd>

      <dt> email: </dt>
      <dd> <%= @patient.email%> </dd>

      <dt> Phone Number: </dt>
      <dd> <%= @patient.phone_no %> </dd>

      <dt> Home Address: </dt>
      <dd> <%= @patient.home_address %> </dd>

      <dt> Facility Address: </dt>
      <dd> <%= @patient.facility_address %> </dd>

      <dt> Pickup Time: </dt>
      <dd> <%= @patient.pickup_time.strftime("%I:%M%p") %> </dd>
  

      <dt> Frequency: </dt>
      <dd> <% @patient.days_of_week.split(',').each do |day| %>
          <%= day.gsub(/(\"|\[|\])/, '').strip %>
          <% end %>
      </dd>
    </dl>
    <%= link_to "Edit", edit_patient_path(@patient), class: 'btn btn-success' %>
    <%= link_to "Delete Post", @patient, method: :delete,
    class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
   </div>
 </div>
  </div>
</div>
