<%= form_for @patient do |f| %>
  <% if @patient.errors.any? %>
    <div class="alert alert-danger">
      <h4> There is <%= pluralize(@patient.errors.count, "error") %>.</h4>
      <ul>
        <% @patient.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
  <% end %>
  <%= form_group_tag(@patient.errors[:name]) do %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter your name" %>
    </div>  <br/>
    <div class="form-group">
      <%= f.label :email%>
      <%= f.text_field :email, class: 'form-control', placeholder: "Enter your email" %>
    </div>
    <div class="form-group">
      <%= f.label :phone_no %>
      <%= f.text_field :phone_no, class: 'form-control', placeholder: "Enter your phone number"%>
    </div>
    <div class="form-group">
      <%= f.label :home_address %>
      <%= f.text_field :home_address, class: 'form-control', placeholder: "Enter your home address"%>
    </div>
    <div class="form-group">
      <%= f.label :facility_address %>
      <%= f.text_field :facility_address, class: 'form-control', placeholder: "Enter your facility address"%>
    </div>
    <div class="form-group">
      <%= f.label :pickup_time%>
      <%= f.text_field :pickup_time, class: 'form-control', placeholder: "check your pickup_time"%>
    </div>
    <!-- <div class="form-group">
      <%= f.label :days_of_week %>
      <%= f.text_field :days_of_week, class: 'form-control', placeholder: "Enter your phone number"%>
    </div> -->

    <div class="form-group">
      <%= f.label :days_of_week %>
      <%= check_box :patient, :days_of_week, { :multiple => true }, 'Monday', nil %>
      <%= check_box :Patient, :days_of_week, { :multiple => true }, 'Tuesday', nil %>
      <%= check_box :patient, :days_of_week, { :multiple => true }, 'Wednesday', nil %>
      <%= check_box :patient, :days_of_week, { :multiple => true }, 'Thursday', nil %>
      <%= check_box :patient, :days_of_week, { :multiple => true }, 'Friday', nil %>
      <%= check_box :patient, :days_of_week, { :multiple => true }, 'Saturday', nil %>
      <%= check_box :patient, :days_of_week, { :multiple => true }, 'Sunday', nil %>
    </div>

  <% end %>

  <div class="form-group text-left">
    <br>
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
